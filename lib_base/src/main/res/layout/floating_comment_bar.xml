<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color"
    android:maxHeight="@dimen/dp_150"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/editCommentDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_10FFFFFF"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/editCommentParent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintEnd_toStartOf="@id/editCommentLikeLayout"
        android:layout_marginEnd="@dimen/dp_18"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_11"
        android:orientation="horizontal"
        android:minHeight="@dimen/dp_40"
        android:background="@drawable/edit_comment_back_shape">

        <ImageView
            android:id="@+id/editCommentHintImage"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/edit_hint_icon"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/editCommentLeftPlaceView"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_2"/>

        <EditText
            android:id="@+id/editCommentEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/say_something"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:layout_marginStart="@dimen/dp_6"
            android:textColor="@color/color_90FFFFFF"
            android:textColorHint="@color/color_40FFFFFF"
            tools:ignore="TextFields" />

        <ImageView
            android:id="@+id/editCommentSendBtn"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_11"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:src="@drawable/edit_comment_can_send_icon"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editCommentLikeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/editCommentShareIcon"
        android:layout_marginEnd="@dimen/dp_20"
        tools:ignore="MissingConstraints" >

        <ImageView
            android:id="@+id/editCommentLikeIcon"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/dynamic_unlike_icon"/>

        <TextView
            android:id="@+id/editCommentLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_80FFFFFF"
            android:layout_marginStart="@dimen/dp_4"
            tools:text="1.3K"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/editCommentShareIcon"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@drawable/dynamic_share_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>