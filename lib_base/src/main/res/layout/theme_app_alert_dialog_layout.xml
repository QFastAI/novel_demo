<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/app_dialog_close_view"
        style="@style/theme_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/app_dialog_title_view"
        style="@style/theme_alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="0dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="标题标题标标题标题标题题标"
        tools:visibility="visible" />

    <ScrollView
        android:id="@+id/app_dialog_message_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_20"
        android:overScrollMode="never"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/app_dialog_bottom_guide_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_dialog_title_view"
        app:layout_goneMarginBottom="@dimen/space_20"
        app:layout_goneMarginTop="@dimen/space_10"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/space_5">

            <TextView
                android:id="@+id/app_dialog_message_view"
                style="@style/theme_dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                tools:text="消息消息消息消"
                tools:visibility="visible" />

        </LinearLayout>

    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/app_dialog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_20"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:requiresFadingEdge="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/app_dialog_bottom_guide_line"
        app:layout_constraintTop_toBottomOf="@id/app_dialog_title_view"
        app:layout_goneMarginBottom="0dp"
        app:layout_goneMarginTop="0dp"
        tools:itemCount="3"
        tools:listitem="@layout/theme_dialog_list_item_layout" />

    <FrameLayout
        android:id="@+id/app_dialog_custom_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_20"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/app_dialog_bottom_guide_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_dialog_title_view"
        app:layout_goneMarginBottom="0dp"
        app:layout_goneMarginTop="0dp" />

    <View
        android:id="@+id/app_dialog_bottom_guide_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="56dp" />

    <com.aiso.qfast.base.button.SkyStateButton
        android:id="@+id/app_dialog_button_negative"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/app_dialog_button_positive"
        app:ss_background_color_pressed="@color/fade_black_5_daynight_10"
        app:ss_text_color="@color/white"
        app:ss_text_color_disable="@color/fade_black_50_daynight"
        tools:text="取消"
        tools:visibility="visible" />

    <View
        android:id="@+id/bottom_center_line"
        android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:background="@color/fade_black_10_daynight"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/app_dialog_button_negative"
        tools:visibility="visible" />

    <com.aiso.qfast.base.button.SkyStateButton
        android:id="@+id/app_dialog_button_positive"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textAppearance="@style/theme_text_appearance.button.large"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/app_dialog_button_negative"
        app:layout_constraintRight_toRightOf="parent"
        app:ss_background_color_pressed="@color/fade_black_5_daynight_10"
        app:ss_text_color="@color/white"
        app:ss_text_color_disable="@color/fade_black_50_daynight"
        tools:text="确认"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="50dp"
        android:background="@color/fade_black_10_daynight"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>