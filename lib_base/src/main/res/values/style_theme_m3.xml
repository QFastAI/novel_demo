<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="theme_toolbar" parent="Widget.Material3.Toolbar">
        <item name="maxButtonHeight">?actionBarSize</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="navigationIconTint">?colorOnBackground</item>
        <item name="titleCentered">true</item>
        <item name="subtitleCentered">true</item>
        <!--        <item name="android:minHeight">?actionBarSize</item>-->
        <!--        app:navigationIcon="@drawable/ic_theme_arrow_back"-->
    </style>


    <style name="theme_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/theme_edittext_cursor</item>
    </style>


    <style name="theme_list_item">
        <item name="android:background">@drawable/theme_item_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/theme_list_item_padding</item>
        <item name="android:paddingRight">@dimen/theme_list_item_padding</item>
        <item name="android:minHeight">@dimen/theme_list_item_min_height</item>
        <item name="android:textSize">@dimen/theme_list_item_text_size</item>
        <item name="android:textColor">@color/theme_text_80</item>
        <item name="android:textAppearance">@style/theme_text_appearance.bold</item>
    </style>


    <!--  Button  -->

    <style name="theme_button_icon">
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/theme_bg_button_borderless_icon</item>
    </style>

    <!--  Dialog  -->

    <style name="theme_dialog" parent="@style/ThemeOverlay.Material3.Dialog">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">85%</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@drawable/theme_bg_dialog</item>
        <item name="android:windowTitleStyle">@style/internal_m3_text_appearance.TitleLarge</item>
        <item name="selectableItemBackground">@drawable/theme_item_background</item>
        <item name="selectableItemBackgroundBorderless">@drawable/theme_item_background</item>
    </style>

    <style name="theme_dialog.fixed">
        <item name="windowFixedWidthMajor">300dp</item>
        <item name="windowFixedWidthMinor">300dp</item>
        <item name="android:windowMinWidthMajor" tools:ignore="NewApi">@null</item>
        <item name="android:windowMinWidthMinor" tools:ignore="NewApi">@null</item>
    </style>

    <style name="theme_dialog.alert">
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">75%</item>
    </style>

    <style name="theme_dialog.alert.r20">
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">75%</item>
        <item name="android:windowBackground">@drawable/theme_bg_dialog_r20</item>
    </style>

    <style name="theme_dialog.not_floating" parent="theme_dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/animation_null</item>
    </style>

    <style name="theme_dialog.drawer">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/animation_slide_left</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">false</item>
        <item name="android:windowTranslucentNavigation" tools:ignore="NewApi">false</item>
    </style>

    <style name="theme_dialog_close" parent="theme_button_icon">
        <item name="android:minHeight">@dimen/theme_dialog_close_size</item>
        <item name="android:minWidth">@dimen/theme_dialog_close_size</item>
        <item name="android:src">@drawable/icon_theme_close</item>
        <item name="tint">@color/fade_black_40_daynight</item>
    </style>

    <style name="theme_dialog_title">
        <item name="android:textAppearance">@style/internal_m3_text_appearance.TitleLarge</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="theme_alert_dialog_title" parent="theme_dialog_title">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/mtrl_space_24</item>
        <item name="android:layout_marginLeft">@dimen/space_30</item>
        <item name="android:layout_marginRight">@dimen/space_30</item>
        <item name="android:paddingLeft">@dimen/theme_dialog_title_padding</item>
        <item name="android:paddingRight">@dimen/theme_dialog_title_padding</item>
    </style>

    <style name="theme_dialog_message">
        <item name="android:textAppearance">@style/internal_m3_text_appearance.BodyMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:layout_marginLeft">@dimen/space_30</item>
        <item name="android:layout_marginRight">@dimen/space_30</item>
        <item name="android:layout_marginTop">@dimen/space_10</item>
        <item name="android:paddingLeft">@dimen/theme_dialog_message_padding</item>
        <item name="android:paddingRight">@dimen/theme_dialog_message_padding</item>
    </style>

    <style name="theme_bottom_sheet_dialog" parent="ThemeOverlay.Material3.DayNight.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="bottomSheetStyle">@style/theme_bottom_sheet_style</item>
        <item name="selectableItemBackground">@drawable/theme_item_background</item>
        <item name="selectableItemBackgroundBorderless">@drawable/theme_item_background_borderless
        </item>
        <!--  这两个配套使用，必须要设置 navigationBarColor 透明  -->
        <item name="enableEdgeToEdge">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent
        </item>
    </style>


    <style name="theme_bottom_navigation_style" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="itemIconTint">@null</item>
        <item name="tint">@null</item>
    </style>

    <style name="theme_bottom_sheet_style" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">#00FFFFFF</item>
        <!--    必须设置0，否则无法设置白色 -->
        <item name="android:elevation">0dp</item>
        <item name="shapeAppearance">@style/theme_shape_appearance.bottom_sheet</item>
    </style>

    <style name="theme_shape_appearance.bottom_sheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/surface_radius_16</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/color_1A1A1A</item>
    </style>
</resources>