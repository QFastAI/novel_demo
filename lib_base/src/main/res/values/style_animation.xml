<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="animation_slide_left">
        <item name="android:windowEnterAnimation">@anim/translate_left_in</item>
        <item name="android:windowExitAnimation">@anim/translate_left_out</item>
    </style>

    <style name="animation_fade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="animation_fast_fade">
        <item name="android:windowEnterAnimation">@anim/fast_fade_in</item>
        <item name="android:windowExitAnimation">@anim/fast_fade_out</item>
    </style>

    <style name="animation_null">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>


</resources>