<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/create_book_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_152"
        android:background="@drawable/edit_comment_back_shape"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        app:layout_constraintTop_toTopOf="@id/create_book_view"
        app:layout_constraintBottom_toBottomOf="@id/create_book_view"
        app:layout_constraintStart_toStartOf="@id/create_book_view"
        app:layout_constraintEnd_toEndOf="@id/create_book_view"
        android:src="@drawable/create_book_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建新书"
        android:textSize="@dimen/sp_14"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/create_book_view"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_80FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>