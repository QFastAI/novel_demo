<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color">

    <View
        android:id="@+id/book_shell_item_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_152"
        android:background="@drawable/edit_comment_back_shape"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/book_shell_item_progress"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        app:layout_constraintTop_toTopOf="@id/book_shell_item_view"
        app:layout_constraintBottom_toBottomOf="@id/book_shell_item_view"
        app:layout_constraintStart_toStartOf="@id/book_shell_item_view"
        app:layout_constraintEnd_toEndOf="@id/book_shell_item_view" />

    <ImageView
        android:id="@+id/book_shell_item_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_151"
        android:visibility="gone"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/book_shell_item_view"
        app:layout_constraintBottom_toBottomOf="@id/book_shell_item_view"
        app:layout_constraintStart_toStartOf="@id/book_shell_item_view"
        app:layout_constraintEnd_toEndOf="@id/book_shell_item_view"
        android:layout_margin="0.5dp"/>

    <TextView
        android:id="@+id/book_shell_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这里应该是书的名称"
        android:textSize="@dimen/sp_14"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/book_shell_item_view"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_80FFFFFF" />

    <TextView
        android:id="@+id/book_item_wait_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/book_shell_item_name"
        app:layout_constraintTop_toBottomOf="@id/book_shell_item_name"
        android:text="排队中"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#7595FF"/>

</androidx.constraintlayout.widget.ConstraintLayout>