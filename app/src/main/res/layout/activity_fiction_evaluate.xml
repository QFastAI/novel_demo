<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".activity.FictionEvaluateActivity">

    <ImageView
        android:id="@+id/evaluateBackIcon"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:src="@drawable/qfast_back_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="章节评价"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_90FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_20"/>

    <TextView
        android:id="@+id/evaluateBackTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_80FFFFFF"
        android:layout_marginTop="@dimen/dp_168"
        android:text="您是否喜欢当前章节的情节设计？"
        app:layout_constraintTop_toBottomOf="@id/evaluateBackIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_16"
        android:textSize="@dimen/sp_14"/>

    <LinearLayout
        android:id="@+id/evaluateOperationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/evaluateBackTip">

        <com.aiso.qfast.base.button.SkyStateButton
            android:id="@+id/evaluateLikeBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_32"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dp_42"
            android:text="喜欢"
            app:ss_background_drawable="@drawable/random_back_shape"
            android:textColor="@color/white"
            app:ss_radius="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_36"
            app:layout_constraintEnd_toStartOf="@id/evaluateDislikeBtn"
            app:layout_constraintTop_toBottomOf="@id/evaluateBackTip"/>

        <com.aiso.qfast.base.button.SkyStateButton
            android:id="@+id/evaluateOrdinaryBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_22"
            android:text="一般"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            app:ss_background_drawable="@drawable/edit_comment_back_shape"
            android:layout_marginTop="@dimen/dp_36"
            app:layout_constraintTop_toBottomOf="@id/evaluateBackTip"
            app:layout_constraintStart_toEndOf="@id/evaluateLikeBtn"/>

        <com.aiso.qfast.base.button.SkyStateButton
            android:id="@+id/evaluateDislikeBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_32"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_42"
            app:layout_constraintStart_toEndOf="@id/evaluateOrdinaryBtn"
            android:text="不喜欢"
            app:ss_background_color="@color/cyan"
            android:textColor="@color/white"
            app:ss_radius="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_36"
            app:layout_constraintTop_toBottomOf="@id/evaluateBackTip"/>

    </LinearLayout>

    <TextView
        android:id="@+id/other_consume_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/evaluateBackIcon"
        android:text="其他读者的创意"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        android:textColor="@color/color_70FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_16"/>

    <LinearLayout
        android:id="@+id/other_consume_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/other_consume_text"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/evaluate_other_consume_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72">

            <com.aiso.qfast.base.button.SkyStateButton
                android:id="@+id/go_create_consune"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:layout_gravity="center"
                android:paddingHorizontal="@dimen/dp_18"
                app:ss_background_drawable="@drawable/random_back_shape"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:text="暂无感兴趣章节，去创作"/>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>